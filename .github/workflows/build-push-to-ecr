name: Build and Push to ECR

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Configure AWS credentials
      uses: aws-actions/configure-aws-credentials@v1
      with:
        aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
        aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
        aws-region: <your-AWS-region>

    - name: Login to ECR registry
      run: aws ecr get-login-password --region <your-AWS-region> | docker login --username AWS --password-stdin <your-ECR-registry>

    - name: Build and push Docker image
      run: |
        docker build -t <your-ECR-registry>/<your-repository>:<tag> .
        docker push <your-ECR-registry>/<your-repository>:<tag>
